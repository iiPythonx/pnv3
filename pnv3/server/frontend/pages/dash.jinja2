{% extends "index.jinja2" %}
{% block content %}
    <meta name = "hostname" value = "{{ hostname }}">

    <!-- CSS -->
    <link rel = "stylesheet" href = "https://cdnjs.cloudflare.com/ajax/libs/codemirror/6.65.7/codemirror.min.css">
    <style>
        main {
            width: calc(100% - 40px);
            height: calc(100% - 40px);
        }
        header, aside, article {
            border: 1px solid #fff;
            padding: 5px;
        }

        /* Handle top bar */
        header {
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0px 10px;
        }
        header > div {
            display: flex;
            align-items: center;
            gap: 25px;
        }
        svg {
            cursor: pointer;
        }
        .vertical-sep {
            height: 20px;
            border-left: 1px solid #fff;
        }

        /* Handle bottom */
        footer {
            display: flex;
            gap: 10px;
            flex: 1;
        }

        /* Handle sidebar */
        aside {
            width: 200px;
            height: 96%;
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        /* Handle windows */
        section {
            display: flex;
            flex-direction: column;
            gap: 10px;
            flex: 1;
        }
        article {
            display: flex;
            flex-direction: column;
            flex: 1;
            gap: 10px;
        }
        div.button-row {
            display: flex;
            gap: 10px;
            align-items: center;
            justify-content: center;
        }
        textarea {
            flex: 1;
            opacity: 0;
        }

        /* Code editing */
        div.CodeMirror, .gap {
            flex: 1;
        }
        div.CodeMirror-gutters, div.CodeMirror {
            background: none;
        }
        div.CodeMirror-cursor {
            border-left: 1px solid #fff;
        }
    </style>

    <!-- Content -->
    <header>
        <h2>Edit Mode Â· Host "{{ hostname }}"</h2>
        <div>
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z"/>
                <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z"/>
            </svg>
            <div class = "vertical-sep"></div>
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16" id = "logout">
                <path d="M3 2a1 1 0 0 1 1-1h8a1 1 0 0 1 1 1v13h1.5a.5.5 0 0 1 0 1h-13a.5.5 0 0 1 0-1H3zm1 13h8V2H4z"/>
                <path d="M9 9a1 1 0 1 0 2 0 1 1 0 0 0-2 0"/>
            </svg>
        </div>
    </header>
    <footer>
        <aside>
            <div class = "gap"></div>
            <button id = "create-file">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                    <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4"/>
                </svg>
                New File
            </button>
        </aside>
        <section>
            <article>
                <textarea>Select a file to start editing.</textarea>
                <hr>
                <div class = "button-row">
                    <button id = "save-btn">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                            <path d="M11 2H9v3h2z"/>
                            <path d="M1.5 0h11.586a1.5 1.5 0 0 1 1.06.44l1.415 1.414A1.5 1.5 0 0 1 16 2.914V14.5a1.5 1.5 0 0 1-1.5 1.5h-13A1.5 1.5 0 0 1 0 14.5v-13A1.5 1.5 0 0 1 1.5 0M1 1.5v13a.5.5 0 0 0 .5.5H2v-4.5A1.5 1.5 0 0 1 3.5 9h9a1.5 1.5 0 0 1 1.5 1.5V15h.5a.5.5 0 0 0 .5-.5V2.914a.5.5 0 0 0-.146-.353l-1.415-1.415A.5.5 0 0 0 13.086 1H13v4.5A1.5 1.5 0 0 1 11.5 7h-7A1.5 1.5 0 0 1 3 5.5V1H1.5a.5.5 0 0 0-.5.5m3 4a.5.5 0 0 0 .5.5h7a.5.5 0 0 0 .5-.5V1H4zM3 15h10v-4.5a.5.5 0 0 0-.5-.5h-9a.5.5 0 0 0-.5.5z"/>
                        </svg>
                        Save
                    </button>
                    <button id = "trash-btn">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z"/>
                            <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z"/>
                        </svg>
                        Trash File
                    </button>
                </div>
            </article>
            <article>Select a file to begin rendering.</article>
        </section>
    </footer>
{% endblock %}
{% block js %}
    <script src = "https://cdnjs.cloudflare.com/ajax/libs/codemirror/6.65.7/codemirror.min.js"></script>
    <script src = "/js/dashboard.js"></script>
{% endblock %}
