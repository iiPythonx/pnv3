{% extends "index.jinja2" %}
{% block content %}

    <!-- CSS -->
    <style>
        main {
            width: calc(100% - 40px);
            height: calc(100% - 40px);
        }
        header, aside, article {
            border: 1px solid #fff;
            padding: 5px;
        }

        /* Handle top bar */
        header {
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0px 10px;
        }
        header > div {
            display: flex;
            align-items: center;
            gap: 25px;
        }
        svg {
            cursor: pointer;
            scale: 1.3;
        }
        .vertical-sep {
            height: 20px;
            border-left: 1px solid #fff;
        }

        /* Handle bottom */
        footer {
            display: flex;
            gap: 10px;
            flex: 1;
        }

        /* Handle sidebar */
        aside {
            width: 200px;
            height: 96%;
        }

        /* Handle windows */
        section {
            display: flex;
            flex-direction: column;
            gap: 10px;
            flex: 1;
        }
        article {
            flex: 1;
        }
    </style>

    <!-- Content -->
